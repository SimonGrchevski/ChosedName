<section class="pageBody signUpBodyHeight">
  <h2 class="p-5 text-center">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html:{class:'d-flex flex-column align-items-center'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field whiteWrapper p-4 w-75">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :required=>true%>
    </div>

    <div class="field whiteWrapper p-4 w-75">
      <%= f.label :name %><br />
      <%= f.text_field :name , :required=>true %>
    </div>


    <div class="field whiteWrapper p-4 w-75">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", :required=>true %>
    </div>

    <div class="field whiteWrapper p-4 w-75">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :required=>true %>
    </div>

    <div class="d-flex justify-content-center bg-success p-3 btnWrapper actions w-75 m-1">
      <%= f.submit "Sign up" ,class:'btn btn-success w-100 border-white'%>
    </div>
  <% end %>
</section>


  

 
